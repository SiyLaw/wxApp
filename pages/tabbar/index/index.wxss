/**index.wxss**/
@import "../../../common/lib/weui.wxss";

.swiper-item {
  display: block;
  height: 150px;
  text-align: center;
}

.flex-wrp {
  display: flex;
}

.flex-item {
  width: 34%;
}

.item-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-desc:hover {
  background-color: #eee;
  border-radius: 10rpx;
}
.item-desc-img{
  width: 90rpx;
  height: 90rpx;
  margin: 10rpx;
  border-radius: 20%;
}
.item-desc-headtxt {
  color: #222;
  font-size: 28rpx;
}
.item-desc-detailtxt{
  -ms-text-overflow:ellipsis;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  color: #888888;
  font-size: 22rpx;
  height: 60rpx;
  padding: 0 5rpx;
}
.canvas {
  width: 100%;
  height: 200px;
  background-color: #fff;
}