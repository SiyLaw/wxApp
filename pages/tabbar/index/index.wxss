/**index.wxss**/
@import "../../../common/lib/weui.wxss";
@import "../../../common/lib/hot.wxss";

swiper {
  height: 160rpx;
  width: 100%;
  letter-spacing: 5rpx;
}

.swiper-item {
  height: 160px;
  width: 100%;
  text-align: center;
}

.swiper-text {
  position: absolute;
  left: 10%;
  top: 12%;
  text-shadow: #eee 0 2rpx 0;
}

.swiper-click {
  position: absolute;
  left: 20%;
  top: 62%;
  color: #888;
  font-size: 22rpx;
  background-color: #fff;
  padding: 5rpx 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 1px 5px #888;
}

.flex-wrp {
  display: flex;
}

.flex-item {
  width: 34%;
}

.item-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*.item-desc:hover {
  background-color: #eee;
  border-radius: 10rpx;
}*/

.item-desc image {
  padding: 15rpx 16rpx;
  width: 50rpx;
  height: 50rpx;
}

.item-desc-img {
  border-radius: 80rpx;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
}

.item-desc .lightBlue {
  background-color: #4682b4;
}

.item-desc .lightOri {
  background-color: #cd853f;
}

.item-desc .lightGree {
  background-color: #3cb371;
}

.ad-item {
  height: 200rpx;
  margin: 10rpx 10rpx;
  background-color: #eee8aa;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
}

.ad-item .txt {
  flex: 6;
  display: flex;
  flex-direction: column;
  letter-spacing: 5rpx;
}

.ad-item .head {
  padding-left: 50rpx;
  padding-top: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.ad-item .sub-head {
  padding-left: 50rpx;
  padding-top: 10rpx;
  font-size: 28rpx;
  color: #888;
}

.ad-item .img {
  height: 170rpx;
  width: 170rpx;
  border-radius: 170rpx;
  background-color: #fffff0;
  margin: 15rpx 16rpx;
}

.ad-item image {
  padding: 6rpx 5rpx;
  height: 160rpx;
  width: 160rpx;
  image-rendering: auto;
}

.item-desc-headtxt {
  color: #222;
  font-size: 28rpx;
}

.item-desc-detailtxt {
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  color: #888;
  font-size: 22rpx;
  height: 60rpx;
  padding: 0 5rpx;
}

