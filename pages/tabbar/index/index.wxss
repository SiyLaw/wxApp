/**index.wxss**/
@import "../../../common/lib/weui.wxss";
@import "../../../common/lib/hot.wxss";
.swiper{
  height: 150rpx;
  width: 100%;
}
.swiper-item {
  height: 150px;
  width: 100%;
  text-align: center;
}
.swiper-text{
  position:absolute;
  left:10%;
  top:12%;
  text-shadow: #eee 0 2rpx 0;
  color: #336699;
}

.flex-wrp {
  display: flex;
}

.flex-item {
  width: 34%;
}

.item-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-desc:hover {
  background-color: #eee;
  border-radius: 10rpx;
}
.item-desc-img{
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
}
.item-desc-headtxt {
  color: #222;
  font-size: 28rpx;
}
.item-desc-detailtxt{
  -ms-text-overflow:ellipsis;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  color: #888888;
  font-size: 22rpx;
  height: 60rpx;
  padding: 0 5rpx;
}
