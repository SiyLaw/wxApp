/* pages/tabbar/study/random/random.wxss */
@import "../../../../common/lib/weui.wxss";

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}

.section {
  width: 98%;
}

/* The line */

.time {
  width: 120rpx;
  height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 50px;
  color: #777;
  text-shadow: #eee 0 2px 0;
  text-align: center;
  margin: 0 20rpx;
  border-bottom: #cd853f solid 2rpx;
}

.timeLine {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  width: 8rpx;
  border-radius: 5rpx;
  box-shadow: #f5deb3 2px 2px 0;
  background: #cd853f;
  left: 135rpx;
}

.item-image {
  margin: 2rpx 0rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border: #008000 solid 1rpx;
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 100rpx;
  color: #000;
  text-shadow: #eee 0 2px 0;
}

.item-txt {
  flex: 8;
  margin: 2rpx 0rpx;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
  color: #999;
  height: 100rpx;
}

.txt-head {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
}

.txt-foot {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}

/*--------------------------1.通用 div排版 start----------------*/

.horizontal {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.vertical {
  display: flex;
  flex-direction: column;
}

/*--------------------------1.通用 div排版 end------------------*/
