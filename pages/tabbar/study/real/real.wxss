/* pages/tabbar/study/real/real.wxss */
@import "../../../../common/lib/weui.wxss";
.op_text{
    font-size: 28rpx;
}

.que-tag .tag{
    height: 20rpx;
    padding: 10rpx 10rpx;
    border-radius: 10rpx;
    margin: 0 5rpx;
    background: #EEF5F8;
    color: #2186E0;
    font-size: 24rpx;
    vertical-align: middle;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}


.flex-wrp{
  display: flex;
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}
.top-tab{
  width: 750rpx;
  height: 100%;
  background: #f1f1f1;
  color: #323232;
  font-size: 28rpx;
  line-height: 80rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0rpx 0 30rpx 0;
  z-index: 9999;
}
.toptab.active{
  color: #fff;
  border-bottom: solid 2px #3cc51f;
  background: #3cc51f;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
}
.refresh-block
{
  width: 100%;
  border-top: 1rpx solid #bebebe;
  margin:10rpx 0 5rpx 0;
  text-align: center;
}

.refresh-block image
{
  width: 40rpx;
  height: 40rpx;  
}