/* pages/tabbar/study/random/random.wxss */
@import "../../../../common/lib/weui.wxss";

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}

.section {
  width: 98%;
}

/* The line */

.time {
  width: 120rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 40px;
  color: #000;
  text-align: center;
  margin: 20rpx 20rpx;
  border-bottom: #afdcf8 solid 2rpx;
}

.section2{
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  width: 10rpx;
  background: #afdcf8;
  left: 135rpx;
}

.item {
  background: linear-gradient(to bottom right, #fff, #eee, #fff);
  border-radius: 10rpx;
  margin-top: 10rpx;
  box-shadow: #191970 1px 1px 0;
}

.item-image {
  margin: 2rpx 0rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border: #008000 solid 1rpx;
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 100rpx;
  color: #000;
  text-shadow: #eee 0 2px 0;
}

.item-txt {
  flex: 8;
  margin: 2rpx 0rpx;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
  color: #999;
  /*border: #008000 solid 1rpx;*/
}

.txt-head {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
}

.txt-foot {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}

/*--------------------------1.通用 div排版 start----------------*/

.horizontal {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.vertical {
  display: flex;
  flex-direction: column;
}

/*--------------------------1.通用 div排版 end------------------*/
