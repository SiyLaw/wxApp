/* real_exe.wxss */
@import "../../../../common/lib/weui.wxss";

page {
  height: 100%;
}

.text32 {
  font-size: 32rpx;
}

.text28 {
  font-size: 28rpx;
}

.text24 {
  font-size: 24rpx;
}

.textblock {
  display: block;
  text-indent: 40rpx;
}

.padding10 {
  padding: 10px 10px;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
}

.que-tag {
  border-top: 1px solid #eee;
  padding: 10rpx 10rpx;
}

.que-tag .tag {
  height: 20rpx;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  margin: 0 5rpx;
  background: #eef5f8;
  color: #2186e0;
  vertical-align: middle;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}

.text_label {
  width: 100rpx;
  font-size: 24rpx;
  border: 1rpx solid #2186e0;
  padding: 2rpx 4rpx;
  color: #2186e0;
  margin-right: 10rpx;
}

.section_head {
  background: linear-gradient(to top right, #fff, #eee, #fff);
}

.section_title {
  border-left: 6rpx solid #2186e0;
  padding: 6rpx 4rpx;
  font-size: 28rpx;
  font-weight: bolder;
  color: cornflowerblue;
}

/*--------------------------1.通用 div排版 start----------------*/

.horizontal {
  display: flex;
  flex-direction: row;
}

.vertical {
  display: flex;
  flex-direction: column;
}

/*--------------------------1.通用 div排版 end------------------*/

/*--------------------------1.通用 按钮 start----------------*/

.horizontal {
  display: flex;
  flex-direction: row;
}

.vertical {
  display: flex;
  flex-direction: column;
}

/*--------------------------1.通用 按钮 end------------------*/

.cust-btn {
  font-size: 28rpx;
  text-align: center;
  padding: 40rpx;
}

.cust-btn a {
  border: 1rpx solid #1aad19;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  margin: 0 20rpx;
  color: #1aad19;
}

/*--------------------------1.通用 遮罩层 start----------------------*/

.module-bg-layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #e0e0e0;
  opacity: 1;
  overflow: hidden;
  z-index: 1000;
  margin: auto 0;
}

/*--------------------------1.通用 遮罩层 end----------------------*/

/*--------------------------8.起始弹出窗 start----------------------*/

.dv-module {
  width: 97%;
  margin: 20rpx auto;
  border-radius: 5rpx;
  background-color: #fff;
  box-shadow: 0 0 8rpx #1aad19;
}

.dv-module .content {
  text-align: center;
}

.dv-module .txt-vert {
  writing-mode: vertical-lr;
}

.dv-module .txt {
  margin: -30rpx 0rpx;
  padding: 0;
  font-size: 60rpx;
  font-weight: bold;
  color: #666;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  transform: scale(1, 0.6);
}

.dv-module .txt-date {
  margin: 0rpx 0rpx;
  font-size: 30rpx;
  transform: scale(1, 0.8);
}

.item {
  display: flex;
  padding: 15rpx 10rpx;
  text-align: left;
}

.item-image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-left: 20rpx;
}

.item-image image {
  width: 35rpx;
  height: 35rpx;
  padding: 8rpx 8rpx;
}

.item-txt {
  flex: 8;
  font-size: 28rpx;
  padding: 5rpx 40rpx;
}

/*--------------------------8.起始弹出窗 end----------------------*/

/*--------------------------9.评论弹出窗 start----------------------*/

.cmts_label {
  font-size: 28rpx;
  text-align: right;
  padding: 5rpx 20rpx 5rpx 0;
  color: #5b5b5b;
}

.cmts_content {
  font-size: 28rpx;
  position: relative;
  height: 330rpx;
  width: 100%;
  padding: 5rpx 5rpx;
  border-top: 1rpx dashed #e0e0e0;
  border-bottom: 1rpx dashed #e0e0e0;
  border-left: none;
  border-right: none;
}

/*--------------------------9.评论弹出窗 end----------------------*/

.page-bottom {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}

.page-bottom image {
  width: 50rpx;
  height: 50rpx;
}

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.flex-justify {
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: stretch;
}

.flex-item {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 50rpx;
}

.top-tab {
  width: 100%;
  height: 80rpx;
  background: #f1f1f1;
  color: #666;
  font-size: 28rpx;
  line-height: 80rpx;
  box-shadow: 0 -2rpx 2rpx #bebebe;
  margin: 0;
  z-index: 9999;
}

.exerises-feed {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

.page-section .feed-item {
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}

.page-section .feed-item .feed-source .avatar {
  position: relative;
  display: inline-block;
}

.page-section .feed-item .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  top: 0rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.slabel {
  vertical-align: middle;
}

.page-section .feed-item .feed-source {
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  color: #a0acac;
  font-size: 26rpx;
}

.page-section .feed-item .feed-content {
  padding: 10rpx 0 0 0;
}

.page-section .feed-item .feed-content .question text {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}

.page-section .feed-item .feed-content .answer-body {
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}

.page-section .feed-item .feed-content .answer-actions {
  width: 690rpx;
  padding: 10rpx 0 0;
  color: #666;
}

.page-section .feed-item .feed-content .answer-actions view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}

.page-section .feed-item .feed-content .answer-actions .dot ::after {
  padding: 0 0 0 10rpx;
  content: "•";
}

.page-section .feed-item .feed-content .answer-actions image {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: -10rpx;
}

.exerises-feed-bottom {
  padding: 45rpx;
}

.answer_list {
  padding-left: 40rpx;
  font-size: 26rpx;
  font-weight: bolder;
  color: crimson;
}
