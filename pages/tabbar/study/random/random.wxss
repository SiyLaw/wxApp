/* pages/tabbar/study/random/random.wxss */
@import "../../../../common/lib/weui.wxss";

page {
  height: 100%;
}

.op_text {
  font-size: 28rpx;
}

.que-tag {
  border-top: 1px solid #eee;
  padding: 10rpx 10rpx;
}

.que-tag .tag {
  height: 20rpx;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  margin: 0 5rpx;
  background: #eef5f8;
  color: #2186e0;
  font-size: 24rpx;
  vertical-align: middle;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}

.exerises_type {
  width: 100rpx;
  font-size: 24rpx;
  border: 1rpx solid #2186e0;
  padding: 4rpx 4rpx;
  color: #2186e0;
  margin-right: 10rpx;
}

.exerises_title {
  font-size: 32rpx;
  text-indent: 50rpx;
  word-break: break-all;
}

.section_title {
  border-left: 4rpx solid #2186e0;
  padding: 6rpx 4rpx;
  font-size: 24rpx;
  font-weight: bolder;
  color: cornflowerblue;
}

.comments-section{  
  height:470rpx;
  width:97%;
  margin: 20rpx auto;
  border-radius: 5rpx;
  background-color: #fff;
  box-shadow: 0 0 8rpx #1aad19;
}

.cmts_label {
  font-size: 28rpx;
  text-align: right;
  padding: 5rpx 20rpx 5rpx 0;
  color: #5b5b5b;
}

.cmts_actions{
  font-size: 28rpx;
  text-align: center;
  margin-top:20rpx; 
}
.cmts_actions a{
  width:50rpx;
  border: 1rpx solid #1aad19;
  border-radius: 5rpx;
  padding: 10rpx 10rpx;
  margin:0 10rpx; 
}

.cmts_content {
  font-size: 28rpx;
  position:relative;
  height: 330rpx;
  width: 100%;
  padding: 5rpx 5rpx;
  border-top: 1rpx dashed #e0e0e0;
  border-bottom: 1rpx dashed #e0e0e0;
  border-left: none;
  border-right: none;
}

.page-bottom {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}

.page-bottom image {
  width: 50rpx;
  height: 50rpx;
}

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.flex-item {
  display: inline-flex;
  align-items: center;
}

.top-tab {
  width: 100%;
  height: 80rpx;
  background: #f1f1f1;
  color: #323232;
  font-size: 28rpx;
  line-height: 80rpx;
  box-shadow: 0 -2rpx 2rpx #bebebe;
  margin: 0;
  z-index: 9999;
}

.exerises-feed {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

.page-section .feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}

.page-section .feed-item .feed-source {
  width: 690rpx;
  left: 0;
  height: 50rpx;
}

.page-section .feed-item .feed-source .avatar {
  position: relative;
  display: inline-block;
}

.page-section .feed-item .feed-source a {
  display: inline-block;
  height: 40rpx;
}

.page-section .feed-item .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.page-section .feed-item .feed-source {
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}

.page-section .feed-item .feed-source .item-more {
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}

.page-section .feed-item .feed-content {
  padding: 10rpx 0 0 0;
}

.page-section .feed-item .feed-content .question text {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}

.page-section .feed-item .feed-content .answer-body {
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}

.page-section .feed-item .feed-content .answer-actions {
  width: 690rpx;
  padding: 10rpx 0 0;
  color: #a0acac;
}

.page-section .feed-item .feed-content .answer-actions view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}

.page-section .feed-item .feed-content .answer-actions .dot ::after {
  padding: 0 0 0 10rpx;
  content: "â€¢";
}

.page-section .feed-item .feed-content .answer-actions image {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: -10rpx;
}

.exerises-feed-bottom {
  margin-bottom: 90rpx;
}

.anal-txt {
  font-size: 24rpx;
  text-indent: 40rpx;
  display: block;
}

.answer_list {
  padding-left: 40rpx;
  font-size: 26rpx;
  font-weight: bolder;
  color: crimson;
}

.commodity_screen {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #e0e0e0;
 opacity: 1;
 overflow: hidden;
 z-index: 1000;
 margin: auto 0;
}
.commodity_attr_box {
 width: 100%;
 overflow: hidden;
 position: fixed;
 bottom: 0;
 left: 0;
 z-index: 2000;
 background: #fff;
 padding-top: 20rpx;
}