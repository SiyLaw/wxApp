/* pages/tabbar/study/news.wxss */
.head {
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  box-shadow: 0 2rpx 12rpx 0 #A9A9A9;
  background-color: #4682B4;
  height: 90rpx;
}

.headctrl {
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.headctrl .headimg {
  display: flex;
  flex-direction: row;
}

.headctrl image {
  height: 46rpx;
  width: 46rpx;
  padding-top: 22rpx;
  padding-bottom: 22rpx;
  padding-right: 10rpx;
  padding-left: 40rpx;
}

.headSearch {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-right: 40rpx;
}

.headSearch image {
  height: 46rpx;
  width: 46rpx;
  padding: 10rpx 0;
}


.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f3f3f3;
  padding: 0;
  margin: 0;
  position: fixed;
  top: 90rpx;
  left: 0;
  width: 100%;
}

.swiper{
  width: 100%;
  height: 400rpx;
  letter-spacing: 5rpx;
  background-color: #999;
  font-size: 34rpx;
}

.swiper-item {
  width: 100%;
  text-align: center;
}

.swiper-shadow {
  position: absolute;
  bottom: -1rpx;
  z-index: 1;
  width: 100%;
  height: 0rpx;
  background-color: #999;
  box-shadow: 0 -20rpx 180rpx 50rpx #333;
}
.swiper-text {
  position: absolute;
  bottom: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #fff;
  text-align: justify;
  font-weight: bolder;
  z-index: 2;
}

.infoItem{
  background-color: #fff;
  border: 1rpx solid #dadada;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 2rpx -1rpx #d0d0d0;
  width: 97%;
  margin: 10rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.itemTitle{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 25rpx;
  font-size: 36rpx;
  color: #777777
}

.itemImage{
  flex-grow: 0;
  width: 175rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 25rpx;
}

.itemImage image{  
  height: 150rpx;
  width: 171rpx;
}

/* 菜单框架 */

.lawSub1 {
  position: fixed;
  top: 94rpx;
  left: 0;
  background-color: #eee;
  box-shadow: 2rpx 0 12rpx 0 #d3d3d3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-right: 1rpx solid #c0c0c0;
  z-index: 9998;
}

/* 单项菜单 */

.Sub1item {
  background-color: #eee;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 5rpx 0 #bdb76b;
  margin-bottom: 2rpx;
}

/* 一级菜单 */

.itemHead {
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 6rpx 0;
}

/* 一级菜单 标题 */

.itemHead text {
  font-size: 36rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  flex: auto;
  color: #444;
  text-shadow: 1px 1px 0 #ddd;
}

@keyframes menu-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-105%);
  }
}

@keyframes menu-animation2 {
  0% {
    transform: translateX(-105%);
  }

  100% {
    transform: translateX(0%);
  }
}

.menuhide {
  animation: menu-animation 0.6s ease;
  animation-fill-mode: both;
}

.menushow {
  animation: menu-animation2 0.6s ease;
  animation-fill-mode: both;
}