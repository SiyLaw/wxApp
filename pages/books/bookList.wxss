/* pages/lawArticles/lawList.wxss */

.cpt-main {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-top: 3rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.cpt-main-item {
  padding-left: 40rpx;
}

.cpt-item {
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.cpt-img {
  margin: 10rpx 30rpx 15rpx 20rpx;
}

.cpt-img image {
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
  box-shadow: 0rpx 0rpx 0rpx 2rpx #555;
}

.cpt-opt {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-end;
  font-size: 50rpx;
  font-weight: bolder;
}

.cpt-opt image {
  width: 50rpx;
  height: 50rpx;
}

.cpt-opt1 {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-end;
}

.cpt-opt1 image {
  width: 50rpx;
  height: 50rpx;
}

.cpt-content {
  flex-grow: 2;
}

.cpt-head {
  color: #696969;
  font-size: 30rpx;
  font-weight: bolder;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  letter-spacing: 5rpx;
}
.cpt-head1 {
  color: #696969;
  font-size: 36rpx;
  font-weight: bolder;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  letter-spacing: 5rpx;
}

.cpt-detail {
  padding: 15rpx 0rpx;
}

.cpt-txt {
  font-size: 26rpx;
  color: #808080;
}

.page-section {
  border-top: 0px solid #eee;
}

.item {
  display: flex;
  align-items: center;
}

.item-image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-left: 20rpx;
}

.item-image image {
  width: 35rpx;
  height: 35rpx;
  padding: 8rpx 8rpx;
}

.border-top {
  border-top: 1px solid #eee;
}

.item-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex: 8;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
}

.splited {
  height: 20rpx;
  background-color: #f5f5f5;
  width: 100%;
}

.content-fixed-top {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 110rpx;
}

.sv-content {
  position: fixed;
  top: 110rpx;
  left: 0rpx;
  width: 100%;
  background-color: #f5f5f5;
}
