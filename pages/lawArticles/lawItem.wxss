/* lawItem.wxss */
@import "../../common/lib/weui.wxss";

/* 页面头*/

.head {
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
  box-shadow: 0 2rpx 12rpx 0 #d3d3d3;
  background-color: #525e5e;
}

.headctrl {
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.headctrl image {
  height: 46rpx;
  width: 42rpx;
  padding: 22rpx 40rpx;
}

.headSearch {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  border: 1rpx solid #808080;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.headSearch input {
  color: #ffab30;
  width: 250rpx;
  padding-left: 10rpx;
  text-shadow: 1px 1px 0 rgba(31, 12, 5, 0.5);
}

.headSearch image {
  height: 40rpx;
  width: 38rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 25rpx;
  padding-left: 0;
}

/* 菜单框架 */

.lawSub1 {
  position: fixed;
  top: 94rpx;
  left: 0;
  background-color: #eee;
  box-shadow: 2rpx 0 12rpx 0 #d3d3d3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-right: 1rpx solid #c0c0c0;
  z-index: 9998;
}

/* 单项菜单 */

.Sub1item {
  background-color: #eee;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 5rpx 0 #bdb76b;
  margin-bottom: 2rpx;
}

/* 一级菜单 */

.itemHead {
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 6rpx 0;
}

/* 一级菜单 标题 */

.itemHead text {
  font-size: 36rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  flex: auto;
  color: #444;
  text-shadow: 1px 1px 0 #ddd;
}

/* 一级菜单 折叠图标 */

.itemHead image {
  height: 30rpx;
  width: 30rpx;
  padding: 0 20rpx;
}

/* 二级菜单 */

.itemContent {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  justify-content: flex-start;
  background-color: #525e5e;
  opacity: 0.8;
  color: #ffab30;
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.5);
}

/* 二级菜单项*/

.itemContent view {
  border-bottom: 1rpx solid #808080;
  margin-left: 40rpx;
  display: flex;
}

@keyframes kf-marque-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-50%);
  }
}

.itemContent text {
  word-break: keep-all;
  white-space: nowrap;
  padding: 10rpx 0;
}

/* 法条内容*/

.lawContent {
  position: fixed;
  top: 94rpx;
  right: 0;
  background-color: #eee;
  box-shadow: 2rpx 0 12rpx 0 #d3d3d3;
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #c0c0c0;
  align-items: center;
  color: #444;
}

.lawContent .title {
  font-size: 40rpx;
  font-weight: bolder;
  text-align: center;
  text-shadow: 1px 1px 0 #ddd;
  padding-top: 80rpx;
  padding-bottom: 30rpx;  
  padding-right: 45rpx;
}

.lawContent .subtitle {
  display: block;
  padding-top: 30rpx;
  padding-bottom: 0rpx;  
  padding-right: 45rpx;
  font-size: 36rpx;
  text-align: center;
  text-shadow: 1px 1px 0 #ddd;
}

.lawContent .subtitlename {
  display: block;
  text-align: center;
  font-size: 30rpx;
  font-weight: bolder;
  text-shadow: 1px 1px 0 #ddd;
  padding-top: 0rpx;
  padding-bottom: 10rpx;
}

.lawContent .termitem {
  font-size: 30rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 20rpx;
  padding-right: 45rpx;
  text-align: justify;
}

.termitem .lino {
  color: #2186e0;
}

.scrollsearchbar {
  width: 40rpx;
  position: fixed;
  top: 94rpx;
  right: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  justify-content: space-between;
  text-align: center;
  background: linear-gradient(to right, #eee,#ddd, #eee);
  color: #444;
  opacity: 0.8;
}

.scrollsearchbar label {
  padding: 0rpx 0rpx;
}
